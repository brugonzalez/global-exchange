# Clave secreta de Django (cambiar por una real en producción)
SECRET_KEY=django-insecure-ejemplo1234567890

# Modo debug (True para desarrollo, False para producción)
DEBUG=True

# Configuración de Email
# Servidor SMTP (por defecto smtp.gmail.com)
EMAIL_HOST=smtp.ejemplo.com
# Puerto SMTP (por defecto 587 para TLS)
EMAIL_PORT=587
# Usar TLS para el envío de correos
EMAIL_USE_TLS=True
# Usuario de email
EMAIL_HOST_USER=usuario@ejemplo.com
# Contraseña de email
EMAIL_HOST_PASSWORD=clave_de_email

# API de tasas de cambio
# Clave para la API de tasas de cambio
API_KEY_TASA_CAMBIO=api-key-ejemplo

# Configuración de Stripe
STRIPE_CLAVE_PUBLICABLE=pk_test_ejemplo123456
STRIPE_CLAVE_SECRETA=sk_test_ejemplo123456
STRIPE_SECRETO_ENDPOINT=whsec_ejemplo123456

